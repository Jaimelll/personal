<p id="notice"><%= notice %></p>

<h1>Formulas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Orden</th>
      <th>Obs</th>
      <th>Cantidad</th>
      <th>Admin user</th>
      <th>Product</th>
      <th>Numero</th>
      <th>Acti</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @formulas.each do |formula| %>
      <tr>
        <td><%= formula.nombre %></td>
        <td><%= formula.descripcion %></td>
        <td><%= formula.orden %></td>
        <td><%= formula.obs %></td>
        <td><%= formula.cantidad %></td>
        <td><%= formula.admin_user %></td>
        <td><%= formula.product %></td>
        <td><%= formula.numero %></td>
        <td><%= formula.acti %></td>
        <td><%= link_to 'Show', formula %></td>
        <td><%= link_to 'Edit', edit_formula_path(formula) %></td>
        <td><%= link_to 'Destroy', formula, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

